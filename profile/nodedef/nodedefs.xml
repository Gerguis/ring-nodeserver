<!-- Version 0.0.2 -->
<nodeDefs>

  <!-- The Tesla controller node -->
  <nodedef id="CONTROLLER" nls="CONTROLLER">
    <sts>
      <st id="ST" editor="BOOLEAN"/>
    </sts>
    <cmds>
      <sends/>
      <accepts>
        <cmd id="DISCOVER"/>
        <cmd id="UPDATE_PROFILE"/>
        <cmd id="QUERY"/>
      </accepts>
    </cmds>
  </nodedef>

  <!-- Doorbell -->
  <nodedef id="DOORBELL" nls="DB">
    <sts>
      <st id="ST" editor="I_PERCENT"/> <!-- Battery level -->
      <st id="ERR" editor="BOOLEAN" hide="T" />
    </sts>
    <cmds>
      <sends>
        <cmd id="DING"/>
        <cmd id="MOTION"/>
      </sends>
      <accepts>
        <cmd id="QUERY"/>
      </accepts>
    </cmds>
  </nodedef>
</nodeDefs>
