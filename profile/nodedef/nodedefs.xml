<!-- Version 1.1.0 -->
<nodeDefs>

  <!-- The controller node -->
  <nodedef id="CONTROLLER" nls="CONTROLLER">
    <sts>
      <st id="ST" editor="BOOLEAN"/>
    </sts>
    <cmds>
      <sends/>
      <accepts>
        <cmd id="DISCOVER"/>
        <cmd id="UPDATE_PROFILE"/>
        <cmd id="QUERY"/>
      </accepts>
    </cmds>
  </nodedef>

  <!-- Doorbell Ding-->
  <nodedef id="DOORBELL" nls="DB">
    <sts>
      <st id="ST" editor="I_MV"/> <!-- Battery level -->
      <st id="ERR" editor="BOOLEAN" hide="T" />
    </sts>
    <cmds>
      <sends>
        <cmd id="DON"/>
      </sends>
      <accepts>
        <cmd id="DON"/>
        <cmd id="QUERY"/>
      </accepts>
    </cmds>
  </nodedef>

  <!-- Doorbell Motion Node (Has no battery) -->
  <nodedef id="DOORBELLM" nls="DBM">
  <sts/>
  <cmds>
    <sends>
      <cmd id="DON"/>
      <cmd id="DOF"/>
    </sends>
    <accepts>
      <cmd id="DON"/>
    </accepts>
  </cmds>
  </nodedef>

  <!-- Camera Motion Node (Has battery) -->
  <nodedef id="CAM" nls="CAM">
    <sts>
      <st id="ST" editor="I_MV"/> <!-- Battery level -->
      <st id="ERR" editor="BOOLEAN" hide="T" />
    </sts>
    <cmds>
      <sends>
        <cmd id="DON"/>
        <cmd id="DOF"/>
      </sends>
      <accepts>
        <cmd id="DON"/>
      </accepts>
    </cmds>
  </nodedef>
</nodeDefs>
